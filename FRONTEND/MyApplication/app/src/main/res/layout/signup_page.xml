<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpActivity"
    android:background="@color/background_color_dark">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:srcCompat="@drawable/dietiestates25" />

            <TextView
                android:id="@+id/textBenvenuto"
                style="@style/LoginTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_text" />

            <TextView
                android:id="@+id/textInfo"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginBottom="8dp"
                android:text="@string/signup_info_text" />

            <TextView
                android:id="@+id/textNome"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/name_label" />

            <EditText
                android:id="@+id/editTextNome"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/name_hint"/>

            <TextView
                android:id="@+id/textCognome"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/surname_label" />

            <EditText
                android:id="@+id/editTextCognome"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/surname_hint"/>

            <TextView
                android:id="@+id/textEmail"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/email_label" />

            <EditText
                android:id="@+id/editTextEmail"
                style="@style/LoginEditText"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email_hint"/>

            <TextView
                android:id="@+id/textPassword"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/password_label" />

            <EditText
                android:id="@+id/editTextPassword"
                style="@style/LoginEditText"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:hint="@string/password_hint"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/erroriTextView"
                style="@style/LoginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="@string/errors_label" />

            <Button
                android:id="@+id/signUpButton"
                style="@style/LoginButton"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginBottom="10dp"
                android:text="@string/signup_button_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textAlreadyAccount"
                    style="@style/ForgotPasswordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="@string/already_account_text" />

                <TextView
                    android:id="@+id/loginText"
                    style="@style/ForgotPasswordTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="@string/login_text"
                    android:clickable="true"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


